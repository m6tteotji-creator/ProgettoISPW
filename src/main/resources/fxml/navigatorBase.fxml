<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.onetour.graphiccontroller.NavigatorController">

    <top>
        <HBox spacing="10" prefHeight="50" style="-fx-padding: 10;">
            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="bookingsButton"
                    text="Prenotazioni"
                    visible="false"
                    managed="false"
                    onAction="#onBookingsClicked"/>

            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#onLoginHeaderClicked"/>

            <MenuButton fx:id="userMenu"
                        text="User"
                        visible="false"
                        managed="false">
                <items>
                    <MenuItem fx:id="userInfoItem" text="-" disable="true"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Logout" onAction="#onLogoutClicked"/>
                </items>
            </MenuButton>
        </HBox>
    </top>

    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>

</BorderPane>
