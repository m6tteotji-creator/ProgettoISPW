<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.onetour.graphiccontroller.SearchTourController"
           style="-fx-background-color: white;">

    <VBox alignment="CENTER" spacing="20" StackPane.alignment="CENTER">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Titolo grande -->
        <Label text="ONE TOUR"
               style="-fx-font-size: 86; -fx-font-family: 'Serif'; -fx-text-fill: black;"/>

        <!-- Barra ricerca (simile foto) -->
        <HBox alignment="CENTER"
              spacing="14"
              style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 14 18 14 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.20), 18, 0.25, 0, 6);">

            <!-- Destination -->
            <VBox spacing="3" prefWidth="280">
                <Label text="Destination" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TextField fx:id="destinationField"
                           promptText="Where do you want to go?"
                           style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 0;"/>
            </VBox>

            <!-- separatore -->
            <Label text="|" style="-fx-text-fill: #999; -fx-font-size: 18;"/>

            <!-- When -->
            <!-- When -->
            <VBox spacing="3" prefWidth="460">
                <Label text="When" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>

                <HBox spacing="14" alignment="CENTER_LEFT">

                    <!-- Departure -->
                    <HBox spacing="6" alignment="CENTER_LEFT">
                        <DatePicker fx:id="fromDatePicker"
                                    promptText="Departure"
                                    style="-fx-background-color: transparent; -fx-border-color: transparent;"/>

                        <Button onAction="#onOpenFromCalendar"
                                style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 6;">
                            <graphic>
                                <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                    <image>
                                        <Image url="@images/calendar.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>

                    <!-- separatore -->
                    <Label text="|" style="-fx-text-fill: #999; -fx-font-size: 18;"/>

                    <!-- Return -->
                    <HBox spacing="6" alignment="CENTER_LEFT">
                        <DatePicker fx:id="toDatePicker"
                                    promptText="Return"
                                    style="-fx-background-color: transparent; -fx-border-color: transparent;"/>

                        <Button onAction="#onOpenToCalendar"
                                style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 6;">
                            <graphic>
                                <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                    <image>
                                        <Image url="@images/calendar.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>

                </HBox>
            </VBox>


            <!-- Search icon button -->
            <Button onAction="#onSearchClicked"
                    style="-fx-background-color: black; -fx-cursor: hand; -fx-padding: 10; -fx-background-radius: 12;">
                <graphic>
                    <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                        <image>
                            <Image url="@images/search_white.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>




        </HBox>

        <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
    </VBox>

</StackPane>
