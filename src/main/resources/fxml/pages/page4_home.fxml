<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.onetour.graphiccontroller.SearchTourController"
      spacing="12" style="-fx-padding: 20;">

    <Label text="Search your tour" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <VBox spacing="6">
        <Label text="Destination"/>
        <TextField fx:id="destinationField" promptText="e.g., Rome"/>
    </VBox>

    <HBox spacing="12">
        <VBox spacing="6">
            <Label text="When (from)"/>
            <DatePicker fx:id="fromDatePicker"/>
        </VBox>

        <VBox spacing="6">
            <Label text="When (to)"/>
            <DatePicker fx:id="toDatePicker"/>
        </VBox>
    </HBox>

    <Button text="Search" onAction="#onSearchClicked" />

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
</VBox>
