        <padding>
            <Insets top="40" right="0" bottom="0" left="0"/>
        </padding>

        <Label text="CHOOOSE YOUR EXPERIENCE"
               style="-fx-font-size: 12px; -fx-letter-spacing: 1px; -fx-text-fill: #222;"/>

        <Label text="TOP ATTRACTION DESTINATIONS"
               style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #222;"/>
    </VBox>

    <!-- Cards cittÃ  -->
    <HBox alignment="CENTER" spacing="60">
        <padding>
            <Insets top="10" right="30" bottom="0" left="30"/>
        </padding>

        <!-- BARCELLONA -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="BARCELLONA"
                   style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #222;"/>
            <ImageView fitWidth="230" fitHeight="320" preserveRatio="false">
                <image><Image url="@../images/barcellona.png"/></image>
                <clip>
                    <Rectangle width="230" height="320" arcWidth="40" arcHeight="40"/>
                </clip>
            </ImageView>
        </VBox>

        <!-- VIENNA -->
