<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.onetour.graphiccontroller.SignUpGraphicController">

    <children>
        <VBox spacing="14"
              AnchorPane.topAnchor="40"
              AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40">

            <Label text="Create your account">
                <font>
                    <Font size="22"/>
                </font>
            </Label>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Surname" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="surnameField" promptText="Surname"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="email@example.com"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Password" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" promptText="Password"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="errorLabel" textFill="RED" wrapText="true"/>

            <HBox spacing="10">
                <Button text="Back to Login" onAction="#onBackToLoginClicked"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Sign Up" defaultButton="true" onAction="#onSignUpClicked"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
