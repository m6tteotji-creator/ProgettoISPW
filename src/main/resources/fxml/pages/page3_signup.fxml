<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.onetour.graphiccontroller.SignUpGraphicController"
            style="-fx-background-color: white;">

    <!-- LOGO in alto a sinistra -->
    <ImageView fitHeight="80" preserveRatio="true"
               AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20">
        <image>
            <Image url="@../images/logo.png"/>
        </image>
    </ImageView>

    <!-- Testo grande a sinistra -->
    <VBox spacing="8"
          AnchorPane.leftAnchor="180"
          AnchorPane.topAnchor="240">
        <Label text="TRAVEL"   style="-fx-font-size: 44px; -fx-font-family: 'Serif'; -fx-text-fill: #111;"/>
        <Label text="EXPLORE"  style="-fx-font-size: 44px; -fx-font-family: 'Serif'; -fx-text-fill: #111;"/>
        <Label text="HORIZONS" style="-fx-font-size: 44px; -fx-font-family: 'Serif'; -fx-text-fill: #111;"/>
    </VBox>

    <!-- CARD arancione a destra (semi-trasparente) -->
    <StackPane prefWidth="420" prefHeight="380"
               AnchorPane.rightAnchor="90"
               AnchorPane.topAnchor="160">

        <Rectangle width="420" height="380" arcWidth="40" arcHeight="40"
                   fill="#E58A3A" opacity="0.32"/>

        <VBox alignment="TOP_CENTER" spacing="14" prefWidth="360">
            <padding>
                <Insets top="22" right="24" bottom="22" left="24"/>
            </padding>

            <Label text="Welcome!"
                   style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #111;"/>
            <Label text="Create your account"
                   style="-fx-font-size: 14px; -fx-text-fill: #111;"/>

            <!-- Campi -->
            <TextField fx:id="emailField"
                       promptText="Email"
                       maxWidth="260"
                       style="-fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 14;"/>

            <TextField fx:id="nameField"
                       promptText="Name"
                       maxWidth="260"
                       style="-fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 14;"/>

            <TextField fx:id="surnameField"
                       promptText="Surname"
                       maxWidth="260"
                       style="-fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 14;"/>

            <PasswordField fx:id="passwordField"
                           promptText="New Password"
                           maxWidth="260"
                           style="-fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 14;"/>

            <Label fx:id="errorLabel"
                   text=""
                   wrapText="true"
                   style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Pulsanti -->
            <HBox alignment="CENTER" spacing="12">
                <Button text="Back"
                        onAction="#onBackToLoginClicked"
                        style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 8 22; -fx-cursor: hand;"/>

                <Button text="Sign Up"
                        defaultButton="true"
                        onAction="#onSignUpClicked"
                        minWidth="160"
                        style="-fx-background-color: #E58A3A; -fx-text-fill: white; -fx-background-radius: 18; -fx-padding: 10 16; -fx-cursor: hand;"/>
            </HBox>

        </VBox>
    </StackPane>

</AnchorPane>
